@model BoardGameWui.Models.GameModel
@{
    Layout = "~/Views/Shared/_Game.cshtml";
    ViewBag.Title = "Tic-Tac-Toe";
}

@if (TempData["notice"] != null)
{
    <h4>@TempData["notice"]</h4>
}

<h2>@ViewBag.Title game</h2>
<p>@Model.Message</p>

@using (Html.BeginForm())
{
    @Html.Label("Player name")<br />
    @Html.TextBox("Name")
    <br /><br />

    <button type="submit">Submit</button>
}